  "ApiSettings": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "CacheExpirationMinutes": 15,
    "EnableRequestLogging": true,
    "EnableResponseCompression": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
